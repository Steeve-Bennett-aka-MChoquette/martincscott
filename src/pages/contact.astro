---
import Contactform from "@components/contactform.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import MainLayout from "@layouts/MainLayout.astro";
import { Icon } from "astro-icon/components";
---

<MainLayout title="Contact">
 <Container>
   <Sectionhead>
     <Fragment slot="title">Contact</Fragment>
     <Fragment slot="desc">Let's get in touch</Fragment>
   </Sectionhead>

   <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
     <div>
       <h2 class="font-medium text-2xl text-gray-800">Contact Martin</h2>
       <p class="text-lg leading-relaxed text-slate-500 mt-3">
         Have a question or want to work together? Feel free to reach out through any of these channels.
       </p>
       <div class="mt-5">
         <div class="flex items-center mt-2 space-x-2 text-gray-600">
           <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" />
           <a href="mailto:your@email.com" class="hover:text-gray-800">
             your@email.com
           </a>
         </div>
         <div class="flex items-center mt-2 space-x-2 text-gray-600">
           <Icon class="text-gray-400 w-4 h-4" name="uil:github" />
           <a 
             href="https://github.com/yourgithub" 
             target="_blank"
             rel="noopener"
             class="hover:text-gray-800">
             GitHub Profile
           </a>
         </div>
         <div class="flex items-center mt-2 space-x-2 text-gray-600">
           <Icon class="text-gray-400 w-4 h-4" name="uil:linkedin" />
           <a 
             href="https://linkedin.com/in/yourprofile"
             target="_blank"
             rel="noopener"
             class="hover:text-gray-800">
             LinkedIn Profile
           </a>
         </div>
       </div>
     </div>
     <div>
       <Contactform />
     </div>
   </div>
 </Container>
</MainLayout>